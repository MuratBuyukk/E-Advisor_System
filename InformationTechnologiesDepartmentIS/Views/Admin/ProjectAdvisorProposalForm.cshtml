@model List<InformationTechnologiesDepartmentIS.Models.FormProjectConsultantProposal>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card mb-4 mt-4">
        <div class="card-header alert alert-info h5">
            <i class="fas fa-table me-1"></i>
            Project Advisor Proposal Forms
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Number</th>
                        <th>Student</th>
                        <th>Advisor</th>
                        <th>Project Topic</th>
                        <th>Form Date</th>
                        <th>Status</th>
                        <th>View</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var project in Model)
                    {
                        <tr>
                            <td>@project.Student.StudentNumber</td>
                            <td>@($"{@project.Student.StudentFirstName} {@project.Student.StudentLastName}")</td>
                            <td>@($"{@project.Academician.AcademicianFirstName} {@project.Academician.AcademicianLastName}")</td>
                            <td>@project.Topic</td>
                            <td>@project.FormDate.Value.ToString("dd.MM.yyyy")</td>
                            @if (project.FormStatus.StatusName == "Pending")
                            {
                                <td><a class="text-warning fw-bold text-decoration-none">Pending</a></td>
                            }

                            else if (project.FormStatus.StatusName == "Accepted")
                            {
                                <td><a class="text-success fw-bold text-decoration-none">Accepted</a></td>
                            }

                            else if (project.FormStatus.StatusName == "Rejected")
                            {
                                <td><a class="text-danger fw-bold text-decoration-none">Rejected</a></td>
                            }
                            else
                            {
                                <td><a class="text-info fw-bold text-decoration-none">Approved</a></td>
                            }
                            <td><a href='/Admin/ProjectAdvisorProposalFormDetail/@project.FormId'><input type="button" value="View" class="btn btn-primary btn-sm"/></a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

